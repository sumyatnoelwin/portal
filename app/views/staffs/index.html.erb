<div class="page-header">
  <%= link_to new_staff_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Staff
  <% end %>
  <h1>Listing staffs</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
            <th>Staff name</th>
            <th>Email</th>
            <th>Post</th>
            <th>Phone</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @staffs) do |staff| %>
            <td><%= staff.staff_name %></td>
            <td><%= staff.email %></td>
            <td><%= staff.post %></td>
            <td><%= staff.phone %></td>
            <td><%= link_to 'Show', staff %></td>
        <td><%= link_to 'Edit', edit_staff_path(staff) %></td>
        <td><%= link_to 'Destroy', staff, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
