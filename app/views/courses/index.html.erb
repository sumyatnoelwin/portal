<div class="page-header">
  <%= link_to new_course_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Course
  <% end %>
  <h1>Listing courses</h1>
</div>

 <div class="panel panel-primary" id="accordion">
  <div class="panel-heading">
    <%= link_to '#search-form', 'data-toggle' => "collapse", 'data-parent' => "#accordion", 'aria-expanded' => "true", 'aria-controls' => "search-form" do %>
    <h5 class="panel-layout"><b>Search Information</b></h5>
    <% end %>
  </div>

  <div class="panel-body panel-collapse collaspe in" id="search-form">
    <%= form_tag courses_path, :method => 'get' do %>
      <div class="form-group">
        <div class ="col-md-6 search-space">
          <%= label :course_name, "Course Name" %> 
          <%= text_field_tag :course_name ,params[:course_name], :class => "form-control" %>
        </div>
        <div class ="col-md-6 search-space">
          <%= label :related_field, "Related Field" %>
          <%= text_field_tag :related_field ,params[:related_field], :class => "form-control" %>
        </div>
        <div class="col-md-10">
          <%= submit_tag :search, :class => "btn btn-default btn-primary" %>
        </div>
      </div>
    <% end %>
  </div> <!-- panel body -->
</div> <!-- panel -->


<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
            <th>Course name</th>
            <th>Related field</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @courses) do |course| %>
            <td><%= course.course_name %></td>
            <td><%= course.related_field %></td>
            <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>

  <div class="pagination">
    <%= will_paginate @courses %>
  </div></br>

</div>
