<%= simple_form_for(@ebook) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :ebook_name %>
    <%= f.label :file %>
    <%= f.file_field :file, multiple: false %></br>
    <%= f.input :about, as: :text, input_html: {rows: 5} %>
    <%= f.input :category_id, :as => :select, :collection=> Category.all.map { |c| [c.category_name,c.id]} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
