<div class="page-header">
  <%= link_to ebooks_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_ebook_path(@ebook), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show ebook</h1>
</div>

<dl class="dl-horizontal">
  <dt>Ebook name:</dt>
  <dd><%= @ebook.ebook_name %></dd>

  <dt>File:</dt>
  <dd><%= @ebook.file %></dd>

  <dt>About:</dt>
  <dd><%= @ebook.about %></dd>

  <dt>Category:</dt>
  <dd><%= @ebook.category.category_name %></dd>

  <dt>Uploader:</dt>
  <dd><%= @ebook.uploader_id %></dd>

</dl>
