<div class="page-header">
  <%= link_to forum_comments_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_forum_comment_path(@forum_comment), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show forum_comment</h1>
</div>

<dl class="dl-horizontal">
  <dt>Forum:</dt>
  <dd><%= @forum_comment.forum_id %></dd>

  <dt>Comment:</dt>
  <dd><%= @forum_comment.comment %></dd>

  <dt>Author:</dt>
  <dd><%= @forum_comment.author_id %></dd>

</dl>
