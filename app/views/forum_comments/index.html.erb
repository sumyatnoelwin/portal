<div class="page-header">
  <%= link_to new_forum_comment_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Forum comment
  <% end %>
  <h1>Listing forum_comments</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Forum</th>
            <th>Comment</th>
            <th>Author</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @forum_comments) do |forum_comment| %>
            <td><%= forum_comment.forum_id %></td>
            <td><%= forum_comment.comment %></td>
            <td><%= forum_comment.author_id %></td>
            <td><%= link_to 'Show', forum_comment %></td>
        <td><%= link_to 'Edit', edit_forum_comment_path(forum_comment) %></td>
        <td><%= link_to 'Destroy', forum_comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
