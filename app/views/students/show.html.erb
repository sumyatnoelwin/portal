<div class="page-header">
  <%= link_to students_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_student_path(@student), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show student information</h1>
</div>

<div class="table-responsive">
  <table class="table table-hover">

  <tr><th>Profile:</th>
  <td><%= image_tag @student.profile_url, :size => '150x180' if @student.profile? %></td></tr>

  <tr><th>Student name:</th>
  <td><%= @student.student_name %></td></tr>

  <tr><th>Register no:</th>
  <td><%= @student.reg_no %></td></tr>

  <tr><th>Gender:</th>
  <td><%= @student.gender %></td></tr>

  <tr><th>Date of Birth:</th>
  <td><%= @student.dob.strftime("%d-%m-%Y") %></td></tr>

  <tr><th>NRC No:</th>
  <td><%= @student.nrc %></td></tr>

  <tr><th>Address:</th>
  <td><%= @student.address %></td></tr>

  <tr><th>Email:</th>
  <td><%= @student.email %></td></tr>

  <tr><th>Phone:</th>
  <td><%= @student.phone %></td></tr>

  <tr><th>Section:</th>
  <td><%= @student.section.section_name %></td></tr>

  <tr><th>Guardian:</th>
  <td><%= @student.guardian %></td></tr>

  <tr><th>Relation with Guardian:</th>
  <td><%= @student.relation %></td></tr>

</table>
</div>