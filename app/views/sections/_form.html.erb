<%= simple_form_for(@section) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :section_name %>
    <%= f.input :course_id, :as => :select, :collection=> @courses.map { |c| [c.course_name,c.id]  } %>
    <%= f.input :start_date, as: :string, input_html: {class: :datepicker} %>
    <%= f.input :end_date, as: :string, input_html: {class: :datepicker} %>
    <%= f.input :start_time %>
    <%= f.input :end_time %>
    <%= f.input :description %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
