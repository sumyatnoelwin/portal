<div class="page-header">
  <%= link_to new_room_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Room
  <% end %>
  <h1>Listing rooms</h1>
</div>

 <div class="panel panel-primary" id="accordion">
  <div class="panel-heading">
    <%= link_to '#search-form', 'data-toggle' => "collapse", 'data-parent' => "#accordion", 'aria-expanded' => "true", 'aria-controls' => "search-form" do %>
    <h5 class="panel-layout"><b>Search Information</b></h5>
    <% end %>
  </div>

  <div class="panel-body panel-collapse collaspe in" id="search-form">
    <%= form_tag rooms_path, :method => 'get' do %>
      <div class="form-group">
        <div class ="col-md-12 search-space">
          <%= label :no, "Room No" %> 
          <%= text_field_tag :no ,params[:no], :class => "form-control" %>
        </div>
        <div class="col-md-10">
          <%= submit_tag :search, :class => "btn btn-default btn-primary" %>
        </div>
      </div>
    <% end %>
  </div> <!-- panel body -->
</div> <!-- panel -->

<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
            <th>Room No</th>
            <th>Room name</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @rooms) do |room| %>
            <td><%= room.no %></td>
            <td><%= room.room_name %></td>
            <td><%= link_to 'Show', room %></td>
        <td><%= link_to 'Edit', edit_room_path(room) %></td>
        <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
