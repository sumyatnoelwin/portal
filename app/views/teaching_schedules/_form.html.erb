<%= simple_form_for(@teaching_schedule) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :lecturer_id, :as => :select, :collection=> @lecturers.map { |l| [l.lecturer_name,l.id]  } %>
    <%= f.input :section_id, :as => :select, :collection=> @sections.map { |s| [s.section_name,s.id]  } %>
    <%= f.input :subject_id, :as => :select, :collection=> @subjects.map { |s| [s.subject_name,s.id]  } %>
    <%= f.input :start_date, as: :string, input_html: {class: :datepicker} %>
    <%= f.input :end_date, as: :string, input_html: {class: :datepicker} %>
    <%= f.input :total %>
    <%= f.input :remark %>
    <%= f.input :description %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
