<%= simple_form_for(@lecturer) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :lecturer_name %>
    <%= f.input :gender %>
    <%= f.input :dob, as: :string, input_html: {class: :datepicker} %>
    <%= f.input :nrc %>
    <%= f.input :email %>
    <%= f.input :address %>
    <%= f.input :phone %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
