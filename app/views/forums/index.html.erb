<div class="page-header">
  <%= link_to new_forum_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Forum
  <% end %>
  <h1>Listing forums</h1>
</div>

 <div class="panel panel-primary" id="accordion">
  <div class="panel-heading">
    <%= link_to '#search-form', 'data-toggle' => "collapse", 'data-parent' => "#accordion", 'aria-expanded' => "true", 'aria-controls' => "search-form" do %>
    <h5 class="panel-layout"><b>Search Information</b></h5>
    <% end %>
  </div>

  <div class="panel-body panel-collapse collaspe in" id="search-form">
    <%= form_tag forums_path, :method => 'get' do %>
      <div class="form-group">
        <div class ="col-md-12 search-space">
          <%= label :title, "Title" %> 
          <%= text_field_tag :title ,params[:title], :class => "form-control" %>
        </div>
        <div class="col-md-10">
          <%= submit_tag :search, :class => "btn btn-default btn-primary" %>
        </div>
      </div>
    <% end %>
  </div> <!-- panel body -->
</div> <!-- panel -->

<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Date</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @forums) do |forum| %>
            <td><%= forum.title %></td>
            <td><%= forum.author_id %></td>
            <td><%= forum.date %></td>
            <td><%= link_to 'Show', forum %></td>
        <td><%= link_to 'Edit', edit_forum_path(forum) %></td>
        <td><%= link_to 'Destroy', forum, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
