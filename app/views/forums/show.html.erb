<div class="page-header">
  <%= link_to forums_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_forum_path(@forum), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show forum</h1>
</div>

<dl class="dl-horizontal">
  <dt>Title:</dt>
  <dd><%= @forum.title %></dd>

  <dt>Description:</dt>
  <dd><%= @forum.description %></dd>

  <dt>Author:</dt>
  <dd><%= @forum.author_id %></dd>

  <dt>Date:</dt>
  <dd><%= @forum.date %></dd>

</dl>
