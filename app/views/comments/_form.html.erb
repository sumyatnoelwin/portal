<% if user_signed_in? %>
<div class="page-header">
 <h4>Add Your Comment: </h4>
</div>
<%= simple_form_for([@forum, @forum.comments.build]) do |f| %>
    <%= f.input :body, as: :text, input_html: {rows: 3} %>
  <div class="actions">
    <%= f.submit nil, :class => "btn btn-primary" %>
  </div>
<% end %>
<% end %>